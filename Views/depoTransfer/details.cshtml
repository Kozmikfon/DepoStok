@using DepoStok.Models.Entities
@model depoTransfer
@{
    ViewData["Title"] = "Transfer Detayları";

}

<h2>Transfer No: @Model.transferNo</h2>

<div class="mb-3">
    <strong>Tarih:</strong> @Model.transferTarihi.ToShortDateString() <br />
    <strong>Kaynak Depo:</strong> @Model.kaynakDepo?.depoAd <br />
    <strong>Hedef Depo:</strong> @Model.hedefDepo?.depoAd <br />
    <strong>Açıklama:</strong> @Model.aciklama
</div>

<a asp-controller="depoTransferDetay" asp-action="Create" asp-route-transferId="@Model.transferId" class="btn btn-success mb-3">
    + Malzeme Ekle
</a>

@if (Model.depoTransferDetaylari.Any())
{
    <table class="table table-striped">
        <thead class="table-light">
            <tr>
                <th>Malzeme</th>
                <th>Miktar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detay in Model.depoTransferDetaylari)
            {
                <tr>
                    <td>@detay.malzeme?.malzemeAdi</td>
                    <td>@detay.miktar</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Bu transfere henüz malzeme eklenmemiş.</p>
}
