@model DepoStok.Models.depoTransferDetay
@{
    ViewData["Title"] = "Malzeme Ekle";
}

<h2>Malzeme Transfer Detayı Ekle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="transferId" />

    <div class="mb-3">
        <label asp-for="malzemeId" class="form-label"></label>
        <select asp-for="malzemeId" class="form-select" asp-items="ViewBag.malzemeId">
            <option value="">Malzeme Seçiniz</option>
        </select>
        <span asp-validation-for="malzemeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="miktar" class="form-label"></label>
        <input asp-for="miktar" class="form-control" />
        <span asp-validation-for="miktar" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-controller="DepoTransfer" asp-action="Details" asp-route-id="@Model.transferId" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
