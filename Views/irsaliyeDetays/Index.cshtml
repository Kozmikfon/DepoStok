@using DepoStok.Models.Entities
@model IEnumerable<irsaliyeDetay>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.miktar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.birimFiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.araToplam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.seriNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.irsaliye)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.malzeme)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.miktar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.birimFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.araToplam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seriNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.irsaliye.irsaliyeNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.malzeme.birim)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.detayId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.detayId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.detayId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
