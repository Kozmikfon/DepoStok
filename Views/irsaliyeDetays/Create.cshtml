@model DepoStok.Models.Entities.irsaliyeDetay

@{
    ViewData["Title"] = "Detay Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>İrsaliye Detay Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="irsaliyeId" class="control-label"></label>
                <input asp-for="irsaliyeId" type="number" class="form-control" value="@ViewBag.irsaliyeId" />
                <span asp-validation-for="irsaliyeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="malzemeId" class="control-label"></label>
                <input asp-for="malzemeId" type="number" class="form-control" />
                <span asp-validation-for="malzemeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="miktar" class="control-label"></label>
                <input asp-for="miktar" class="form-control" />
                <span asp-validation-for="miktar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="birimFiyat" class="control-label"></label>
                <input asp-for="birimFiyat" class="form-control" />
                <span asp-validation-for="birimFiyat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="seriNo" class="control-label"></label>
                <input asp-for="seriNo" class="form-control" />
                <span asp-validation-for="seriNo" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Detay Ekle" class="btn btn-primary" />
                <a asp-controller="irsaliyes" asp-action="Index" class="btn btn-secondary ms-2">İrsaliye Listesine Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
